<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Writewave</title>

        <!-- Custom Inline CSS -->
        <style>
            body {
                background-color: #f8f9fa;
            }

            .container {
                margin-top: 20px;
            }

            .card {
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                border: none;
                border-radius: 10px;
                transition: transform 0.3s ease-in-out;
            }

            .card:hover {
                transform: translateY(-5px);
            }

            .card-img-top {
                border-top-left-radius: 10px;
                border-top-right-radius: 10px;
            }

            .card-body {
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }

            .btn-primary {
                background-color: #007bff;
                border: none;
                transition: all 0.3s ease-in-out;
            }

            .btn-primary:hover {
                background-color: #0056b3;
            }

            h5.card-title {
                font-weight: 600;
                color: #343a40;
            }

            .fixed-img {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }

            /* No Blogs Section */
            .no-blogs {
                text-align: center;
                padding: 50px;
                background-color: #ffffff;
                border-radius: 10px;
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
                max-width: 600px;
                margin: 40px auto;
            }

            .no-blogs h2 {
                color: #343a40;
                font-weight: 600;
            }

            .no-blogs p {
                color: #666;
                font-size: 1rem;
            }

            .no-blogs .btn {
                margin-top: 15px;
            }
        </style>
</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container mt-3">
            <h1 class="text-center mb-4">Latest Blogs</h1>

            <% if (blogs.length===0) { %>
                <!-- If No Blogs Exist, Show This -->
                <div class="no-blogs">
                    <h2>Welcome to WriteWave!</h2>
                    <p>It looks like there are no blogs yet. Be the first to share your thoughts, stories, and
                        experiences!</p>
                    <% if (locals.user) { %>
                        <a href="/blog/add-new" class="btn btn-primary">Start Writing</a>
                        <% } else { %>
                            <a href="/user/signup" class="btn btn-outline-primary">Create an Account</a>
                            <a href="/user/signin" class="btn btn-primary">Sign In</a>
                            <% } %>
                </div>
                <% } else { %>
                    <!-- Show Blogs If Available -->
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        <% blogs.forEach(blog=> { %>
                            <div class="col">
                                <div class="card h-100">
                                    <img src="<%= blog.coverImageUrl %>" class="card-img-top fixed-img"
                                        alt="Blog Image">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= blog.title %>
                                        </h5>
                                        <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">Read More</a>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } %>
        </div>

        <%- include('./partials/scripts') %>
</body>

</html>